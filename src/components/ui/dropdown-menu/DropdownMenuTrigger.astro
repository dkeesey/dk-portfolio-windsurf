---
import { DropdownMenuTrigger as DropdownMenuTriggerPrimitive } from '@/components/ui/dropdown-menu';

interface Props {
  class?: string;
  className?: string;
}

const { class: classAstro, className, ...props } = Astro.props;
const combinedClassName = [classAstro, className].filter(Boolean).join(' ');
---

<DropdownMenuTriggerPrimitive
  client:load
  className={combinedClassName}
  {...props}
>
  <slot />
</DropdownMenuTriggerPrimitive>
