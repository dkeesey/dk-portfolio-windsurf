---
import { Layout as LayoutReact } from './Layout';
import RootLayout from '@/layouts/RootLayout.astro';
import SEO from '../seo/SEO.astro';
import type { SEOProps } from '@/types';

interface Props {
  seo?: SEOProps;
  hideGradient?: boolean;
}

const { seo, hideGradient } = Astro.props;
---

<RootLayout>
  <SEO {...seo} />
  <LayoutReact client:load hideGradient={hideGradient}>
    <slot />
  </LayoutReact>
</RootLayout>
