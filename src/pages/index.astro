---
import Layout from '@/components/layout/Layout.astro';
import { HeroSection } from '@/components/sections/HeroSection';
import { EnterpriseExperienceTimeline } from '@/components/sections/EnterpriseExperienceTimeline';
import { SkillsMatrix } from '@/components/sections/SkillsMatrix';

const seo = {
  title: "Dean Keesey - Senior Frontend Engineer & Enterprise Software Developer",
  description: "Senior Frontend Engineer with 15+ years of Fortune 500 experience at SAP, EA, Oracle, Goldman Sachs. Expert in React, TypeScript, and enterprise-scale applications.",
};
---

<Layout {seo} hideGradient={true}>
  {/* Removed the py-12 padding top from main to allow hero to start right after header */}
  <main class="space-y-0">
    <HeroSection client:load />
    <EnterpriseExperienceTimeline client:visible />
    <SkillsMatrix client:visible />
  </main>
</Layout>
