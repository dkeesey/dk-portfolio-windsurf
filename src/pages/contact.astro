---
import Layout from '@/components/layout/Layout.astro';
import { Container } from '@/components/ui/container';
import { ContactForm } from '@/components/forms/ContactForm';
import type { SEOProps } from '@/types';

const seo: SEOProps = {
  title: 'Contact - Dean Keesey',
  description:
    'Get in touch with Dean Keesey for collaboration, opportunities, or questions about web development projects.',
  type: 'website' as const,
};
---

<Layout {seo}>
  <div class="bg-[#eee] min-h-screen">
    <Container as="main" className="py-12">
      <div class="mx-auto max-w-2xl space-y-8 bg-white p-8 rounded-lg shadow-sm">
        <header class="space-y-4">
          <h1 class="text-4xl font-bold">Get in Touch</h1>
          <p class="text-xl text-muted-foreground">
            Have a project in mind or want to discuss opportunities? I'd love to
            hear from you.
          </p>
        </header>

        <ContactForm client:load />

        <div class="mt-12 space-y-4 text-center">
          <h2 class="text-2xl font-semibold">Other Ways to Connect</h2>
          <div class="flex justify-center gap-6">
            <a
              href="https://github.com/dkeesey"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground"
            >
              GitHub
            </a>
            <a
              href="https://linkedin.com/in/deankeesey"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground"
            >
              LinkedIn
            </a>
            <a
              href="mailto:contact@deankeesey.com"
              class="text-muted-foreground hover:text-foreground"
            >
              Email
            </a>
          </div>
        </div>
      </div>
    </Container>
  </div>
</Layout>
