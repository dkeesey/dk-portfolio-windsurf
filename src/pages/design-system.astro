---
import Layout from '@/components/layout/Layout.astro';
import { Badge } from '@/components/ui/badge';
import { Separator } from '@/components/ui/separator';
import TabsClientRenderer from '@/components/ui/tabs/TabsClientRenderer';

const seo = {
  title: "Design System - Dean Keesey",
  description: "A comprehensive guide to design tokens, components, and visual patterns used in my portfolio.",
};
---

<Layout {seo}>
  <div class="container space-y-16 py-12 bg-[#eee]">
    <header class="space-y-4 bg-white p-6 rounded-lg shadow-sm">
      <h1 class="text-4xl font-bold">Design System</h1>
      <div class="space-y-2">
        <p class="text-lg text-muted-foreground">
          Design tokens, components, and visual patterns that define the aesthetic of my portfolio.
        </p>
        <p class="text-sm text-muted-foreground">
          Crafted with precision using Astro, React, and Tailwind CSS.
        </p>
      </div>
      <div class="flex gap-2">
        <Badge variant="secondary">v1.1.0</Badge>
        <Badge variant="outline">Astro 4.x</Badge>
        <Badge variant="outline">React 18+</Badge>
        <Badge variant="outline">Tailwind CSS</Badge>
      </div>
      <Separator />
    </header>

    <section>
      <h2 class="mb-8 text-3xl font-semibold">Design Tokens</h2>
      <div class="w-full">
        <TabsClientRenderer
          client:only="react"
          defaultValue="colors"
          className="w-full"
          tabsType="designTokens"
        />
      </div>
    </section>

    <section class="space-y-8">
      <div class="space-y-4">
        <h2 class="text-3xl font-semibold">Components</h2>
        <p class="text-muted-foreground">
          Modular and reusable UI components designed for consistency and flexibility.
        </p>
      </div>

      <div class="w-full">
        <TabsClientRenderer
          client:only="react"
          defaultValue="buttons"
          className="w-full"
          tabsType="components"
        />
      </div>
    </section>

    <section class="space-y-8">
      <div class="space-y-4">
        <h2 class="text-3xl font-semibold">Design Principles</h2>
        <p class="text-muted-foreground">
          Key guidelines that inform the design of this portfolio.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Clarity</h3>
          <p class="text-muted-foreground">
            Prioritize clear, readable typography and intuitive interactions.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Consistency</h3>
          <p class="text-muted-foreground">
            Maintain a uniform visual language across all components and pages.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-4">Performance</h3>
          <p class="text-muted-foreground">
            Optimize for speed, accessibility, and seamless user experience.
          </p>
        </div>
      </div>
    </section>
  </div>
</Layout>
