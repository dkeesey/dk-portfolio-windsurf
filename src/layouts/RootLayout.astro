---
import '@/styles/globals.css';
import '@/components/chatbot/botpress-style.css';
import { ClientRouter } from 'astro:transitions';
import PostHog from '@/components/PostHog.astro';
import Analytics from '@/components/Analytics.astro';
import Botpress from '@/components/chatbot/Botpress.astro';
// Temporarily disabled for debugging
// import { MicrotextEditor } from '@/components/vibe/MicrotextEditor';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Dean Keesey - Full Stack Developer',
  description = 'Full Stack Developer specializing in modern web development with React, TypeScript, and Node.js',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ClientRouter />
    <!-- Google Analytics 4 + Microsoft Clarity + Facebook Pixel -->
    <!-- IDs configured via Cloudflare Pages environment variables -->
    <Analytics
      ga4Id={import.meta.env.PUBLIC_GA4_ID || 'G-P7KMSQQN1N'}
      clarityId={import.meta.env.PUBLIC_CLARITY_ID || 'u2pjuo05w0'}
      fbPixelId={import.meta.env.PUBLIC_FB_PIXEL_ID}
    />
    <PostHog />
    
    <!-- Development environment checks -->
    {import.meta.env.DEV && (
      <script type="module" src="/src/lib/env-check.js"></script>
    )}
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />
    <!-- <Botpress /> Temporarily disabled to avoid rate limiting issues -->
    <!-- <MicrotextEditor client:only="react" /> Temporarily disabled for debugging -->
  </body>
</html>
